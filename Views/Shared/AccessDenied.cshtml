@{
    ViewData["Title"] = "Access Denied";
}

<div class="row justify-content-center">
    <div class="col-md-6 text-center">
        <div class="card border-danger shadow">
            <div class="card-body py-5">
                <div class="text-danger mb-4">
                    <i class="fas fa-ban" style="font-size: 4rem;"></i>
                </div>
                <h1 class="text-danger">Access Denied</h1>
                <p class="lead">You do not have permission to access this resource.</p>
                <p class="text-muted">If you believe this is an error, please contact your administrator.</p>

                <div class="mt-4">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary me-2">
                        <i class="fas fa-home"></i> Home
                    </a>
                    <a href="javascript:history.back()" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Go Back
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>