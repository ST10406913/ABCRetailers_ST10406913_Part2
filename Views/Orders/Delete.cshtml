<!-- Views/Orders/Delete.cshtml -->
@model Orders
@{
    ViewData["Title"] = "Delete Order";
}

<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <h5 class="text-danger">Are you sure you want to delete this order?</h5>
                <p class="text-muted">This action cannot be undone.</p>

                <div class="alert alert-warning">
                    <strong>Warning:</strong> This will permanently remove the order record.
                </div>

                <div class="order-delete-preview p-3 border rounded bg-light">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="fw-bold">Order #@Model.RowKey.Substring(0, 8)</div>
                            <div class="text-muted">@Model.OrderDate.ToString("MMM dd, yyyy")</div>
                        </div>
                        <div class="col-md-6 text-end">
                            <span class="badge status-@Model.Status.ToLower()">@Model.Status</span>
                        </div>
                    </div>

                    <div class="mt-3">
                        <div class="fw-bold">@Model.CustomerName</div>
                        <div class="text-muted">Customer</div>
                    </div>

                    <div class="mt-2">
                        <div class="fw-bold">@Model.ProductName</div>
                        <div class="text-muted">Product</div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-md-6">
                            <div class="text-muted">Quantity</div>
                            <div class="fw-bold">@Model.Quantity</div>
                        </div>
                        <div class="col-md-6 text-end">
                            <div class="text-muted">Total</div>
                            <div class="fw-bold text-success">@Model.TotalPrice.ToString("C")</div>
                        </div>
                    </div>
                </div>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="PartitionKey" />
                    <input type="hidden" asp-for="RowKey" />

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Confirm Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .order-delete-preview {
        border-left: 4px solid #dc3545;
    }
</style>