<!-- Views/Orders/Index.cshtml -->
@model IEnumerable<Orders>
@{
    ViewData["Title"] = "Orders";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-shopping-cart me-2"></i>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New Order
    </a>
</div>

<!-- Search and Filter Box -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-6">
                <div class="input-group">
                    <input type="text" class="form-control" name="searchString"
                           value="@ViewData["CurrentFilter"]" placeholder="Search orders...">
                    <button class="btn btn-outline-primary" type="submit">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </div>
            <div class="col-md-4">
                <select name="statusFilter" class="form-select" onchange="this.form.submit()">
                    <option value="">All Statuses</option>
                    @foreach (var status in ViewBag.Statuses)
                    {
                        <option value="@status" selected="@(ViewData["StatusFilter"]?.ToString() == status)">@status</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()) || !string.IsNullOrEmpty(ViewData["StatusFilter"]?.ToString()))
                {
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-times"></i> Clear
                    </a>
                }
            </div>
        </form>

        @if (ViewData["SearchResults"] != null)
        {
            <div class="mt-2 text-muted">
                <i class="fas fa-info-circle"></i> @ViewData["SearchResults"]
            </div>
        }
    </div>
</div>

<!-- Orders Table -->
<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Order ID</th>
                            <th>Customer</th>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Order Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr data-order-id="@item.RowKey">
                                <td class="fw-bold">@item.RowKey.Substring(0, 8)...</td>
                                <td>@item.CustomerName</td>
                                <td>@item.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>@item.TotalPrice.ToString("C")</td>
                                <td>
                                    <span class="badge status-@item.Status.ToLower() status-badge">@item.Status</span>
                                </td>
                                <td>@item.OrderDate.ToString("MMM dd, yyyy")</td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-partitionKey="@item.PartitionKey"
                                           asp-route-rowKey="@item.RowKey" class="btn btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <div class="dropdown">
                                            <button class="btn btn-warning dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                <i class="fas fa-sync"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                @if (item.Status != "Confirmed")
                                                {
                                                    <li>
                                                        <a class="dropdown-item status-update-btn" href="#"
                                                           data-partition-key="@item.PartitionKey" data-row-key="@item.RowKey" data-status="Confirmed">
                                                            Mark as Confirmed
                                                        </a>
                                                    </li>
                                                }
                                                @if (item.Status != "Shipped")
                                                {
                                                    <li>
                                                        <a class="dropdown-item status-update-btn" href="#"
                                                           data-partition-key="@item.PartitionKey" data-row-key="@item.RowKey" data-status="Shipped">
                                                            Mark as Shipped
                                                        </a>
                                                    </li>
                                                }
                                                @if (item.Status != "Delivered")
                                                {
                                                    <li>
                                                        <a class="dropdown-item status-update-btn" href="#"
                                                           data-partition-key="@item.PartitionKey" data-row-key="@item.RowKey" data-status="Delivered">
                                                            Mark as Delivered
                                                        </a>
                                                    </li>
                                                }
                                                @if (item.Status != "Cancelled")
                                                {
                                                    <li>
                                                        <a class="dropdown-item status-update-btn" href="#"
                                                           data-partition-key="@item.PartitionKey" data-row-key="@item.RowKey" data-status="Cancelled">
                                                            Cancel Order
                                                        </a>
                                                    </li>
                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                <h4>No Orders Found</h4>
                <p class="text-muted">Get started by creating your first order.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Create First Order
                </a>
            </div>
        }
    </div>
</div>