<!-- Views/Home/Index.cshtml -->
@model ABCRetailers.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-4"><i class="fas fa-tachometer-alt me-3"></i>Dashboard</h1>
        <p class="lead">Welcome to ABC Retailers Management System</p>
    </div>
</div>

<!-- Dashboard Stats Cards -->
<div class="row mb-5">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="dashboard-card card-customers">
            <i class="fas fa-users"></i>
            <div class="count">@Model.TotalCustomers</div>
            <div class="label">Total Customers</div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="dashboard-card card-products">
            <i class="fas fa-box"></i>
            <div class="count">@Model.TotalProducts</div>
            <div class="label">Total Products</div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="dashboard-card card-orders">
            <i class="fas fa-shopping-cart"></i>
            <div class="count">@Model.TotalOrders</div>
            <div class="label">Total Orders</div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="dashboard-card card-revenue">
            <i class="fas fa-chart-line"></i>
            <div class="count">@Model.TotalRevenue.ToString("C")</div>
            <div class="label">Total Revenue</div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Recent Orders -->
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-clock me-2"></i>Recent Orders</h5>
                <a asp-controller="Orders" asp-action="Index" class="btn btn-sm btn-outline-primary">
                    View All <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
            <div class="card-body">
                @if (Model.RecentOrders.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Product</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td class="fw-bold">@order.RowKey.Substring(0, 8)...</td>
                                        <td>@order.CustomerName</td>
                                        <td>@order.ProductName</td>
                                        <td>@order.TotalPrice.ToString("C")</td>
                                        <td>
                                            <span class="badge status-@order.Status.ToLower()">@order.Status</span>
                                        </td>
                                        <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-shopping-cart fa-2x text-muted mb-3"></i>
                        <p class="text-muted">No orders found</p>
                        <a asp-controller="Orders" asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus me-1"></i> Create First Order
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Sidebar with Stats and Low Stock -->
    <div class="col-lg-4">
        <!-- Order Status Distribution -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Order Status</h5>
            </div>
            <div class="card-body">
                @if (Model.OrderStatusCounts.Any())
                {
                    foreach (var status in Model.OrderStatusCounts)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="badge status-@status.Key.ToLower()">@status.Key</span>
                            <span class="fw-bold">@status.Value</span>
                        </div>
                        <div class="progress mb-3" style="height: 8px;">
                            @{
                                var percentage = Model.TotalOrders > 0 ? (double)status.Value / Model.TotalOrders * 100 : 0;
                            }
                            <div class="progress-bar" style="width: @percentage%; background-color: var(--@GetStatusColor(status.Key));"></div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted text-center">No order data available</p>
                }
            </div>
        </div>

        <!-- Low Stock Alert -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2 text-warning"></i>Low Stock Alert</h5>
            </div>
            <div class="card-body">
                @if (Model.LowStockProducts.Any())
                {
                    foreach (var product in Model.LowStockProducts)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3 p-2 border rounded">
                            <div>
                                <div class="fw-bold">@product.Name</div>
                                <small class="text-muted">@product.Category</small>
                            </div>
                            <span class="badge bg-warning">@product.StockQuantity left</span>
                        </div>
                    }
                    <div class="text-center mt-3">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-sm btn-outline-warning">
                            Manage Inventory
                        </a>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center">All products are well stocked</p>
                }
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-bolt me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3 col-6">
                        <a asp-controller="Customers" asp-action="Create" class="btn btn-outline-primary w-100 h-100 py-3">
                            <i class="fas fa-user-plus fa-2x mb-2"></i><br>
                            Add Customer
                        </a>
                    </div>
                    <div class="col-md-3 col-6">
                        <a asp-controller="Products" asp-action="Create" class="btn btn-outline-success w-100 h-100 py-3">
                            <i class="fas fa-box-open fa-2x mb-2"></i><br>
                            Add Product
                        </a>
                    </div>
                    <div class="col-md-3 col-6">
                        <a asp-controller="Orders" asp-action="Create" class="btn btn-outline-info w-100 h-100 py-3">
                            <i class="fas fa-shopping-cart fa-2x mb-2"></i><br>
                            Create Order
                        </a>
                    </div>
                    <div class="col-md-3 col-6">
                        <a asp-controller="Files" asp-action="Upload" class="btn btn-outline-warning w-100 h-100 py-3">
                            <i class="fas fa-upload fa-2x mb-2"></i><br>
                            Upload File
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    public string GetStatusColor(string status)
    {
        return status.ToLower() switch
        {
            "pending" => "warning-color",
            "confirmed" => "info-color",
            "shipped" => "success-color",
            "delivered" => "success-color",
            "cancelled" => "danger-color",
            _ => "secondary-color"
        };
    }
}