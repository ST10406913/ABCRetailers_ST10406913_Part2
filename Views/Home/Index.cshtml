@model ABCRetailers.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-4">Dashboard</h1>
        <p class="lead">Welcome to ABC Retailers Management System</p>
    </div>
</div>

<!-- Dashboard Stats Cards -->
<div class="row mb-5">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-primary">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Total Customers</h5>
                        <h2 class="text-primary">@Model.TotalCustomers</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x text-primary"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-success">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Total Products</h5>
                        <h2 class="text-success">@Model.TotalProducts</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-box fa-2x text-success"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-info">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Total Orders</h5>
                        <h2 class="text-info">@Model.TotalOrders</h2>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-shopping-cart fa-2x text-info"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h5 class="card-title">Total Revenue</h5>
                        <h2 class="text-warning">R @Model.TotalRevenue.ToString("N2")</h2> <!-- FIXED: Currency format -->
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-chart-line fa-2x text-warning"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Recent Orders -->
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Recent Orders</h5>
                <a asp-controller="Orders" asp-action="Index" class="btn btn-sm btn-outline-primary">
                    View All
                </a>
            </div>
            <div class="card-body">
                @if (Model.RecentOrders.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Product</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.RecentOrders)
                                {
                                    <tr>
                                        <td class="fw-bold">@order.RowKey?.Substring(0, Math.Min(8, order.RowKey?.Length ?? 0))...</td> <!-- FIXED: Null check -->
                                        <td>@order.CustomerName</td>
                                        <td>@order.ProductName</td>
                                        <td>R @order.TotalPrice.ToString("N2")</td> <!-- FIXED: Currency format -->
                                        <td>
                                            <span class="badge
                                                        @(order.Status?.ToLower() == "delivered" ? "bg-success" :
                                                                                                    order.Status?.ToLower() == "shipped" ? "bg-info" :
                                                                                                    order.Status?.ToLower() == "pending" ? "bg-warning" :
                                                                                                    order.Status?.ToLower() == "cancelled" ? "bg-danger" : "bg-secondary")">
                                        @order.Status
                                    </span>
                                </td>
                                <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                            </tr>
                                                        }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <p class="text-muted">No orders found</p>
                        <a asp-controller="Orders" asp-action="Create" class="btn btn-primary">
                            Create First Order
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Sidebar with Stats and Low Stock -->
    <div class="col-lg-4">
        <!-- Order Status Distribution -->
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">Order Status</h5>
            </div>
            <div class="card-body">
                @if (Model.OrderStatusCounts.Any())
                {
                    foreach (var status in Model.OrderStatusCounts)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>@status.Key</span>
                            <span class="fw-bold">@status.Value</span>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted text-center">No order data available</p>
                }
            </div>
        </div>

        <!-- Low Stock Alert -->
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Low Stock Alert</h5>
            </div>
            <div class="card-body">
                @if (Model.LowStockProducts.Any())
                {
                    foreach (var product in Model.LowStockProducts)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3 p-2 border rounded">
                            <div>
                                <div class="fw-bold">@product.Name</div>
                                <small class="text-muted">@product.Category</small>
                            </div>
                            <span class="badge bg-warning">@product.StockQuantity left</span>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted text-center">All products are well stocked</p>
                }
            </div>
        </div>
    </div>
</div>