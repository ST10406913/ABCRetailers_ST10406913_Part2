@model IEnumerable<Products>
@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-box me-2"></i>@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Product
    </a>
</div>

<!-- Search and Filter Box -->
<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-6">
                <div class="input-group">
                    <input type="text" class="form-control" name="searchString"
                           value="@ViewData["CurrentFilter"]" placeholder="Search products...">
                    <button class="btn btn-outline-primary" type="submit">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </div>
            <div class="col-md-4">
                <select name="categoryFilter" class="form-select" onchange="this.form.submit()">
                    <option value="">All Categories</option>
                    @foreach (var category in ViewBag.Categories)
                    {
                        <option value="@category" selected="@(ViewData["CategoryFilter"]?.ToString() == category)">@category</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                @if (!string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()) || !string.IsNullOrEmpty(ViewData["CategoryFilter"]?.ToString()))
                {
                    <a asp-action="Index" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-times"></i> Clear
                    </a>
                }
            </div>
        </form>

        @if (ViewData["SearchResults"] != null)
        {
            <div class="mt-2 text-muted">
                <i class="fas fa-info-circle"></i> @ViewData["SearchResults"]
            </div>
        }
    </div>
</div>

<!-- Products Table -->
<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <div class="fw-bold">@item.Name</div>
                                    <small class="text-muted">@item.Description</small>
                                </td>
                                <td>@item.Category</td>
                                <!-- FIXED: Changed from .ToString("C") to R format -->
                                <td class="fw-bold">R @item.Price.ToString("N2")</td>
                                <td>
                                    <span class="badge @(item.StockQuantity > 10 ? "bg-success" : item.StockQuantity > 0 ? "bg-warning" : "bg-danger")">
                                        <!-- FIXED: Removed $ symbol from stock display -->
                                        @item.StockQuantity in stock
                                    </span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" class="product-thumbnail" alt="@item.Name">
                                    }
                                    else
                                    {
                                        <i class="fas fa-image text-muted"></i>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Details" asp-route-partitionKey="@item.PartitionKey"
                                           asp-route-rowKey="@item.RowKey" class="btn btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-partitionKey="@item.PartitionKey"
                                           asp-route-rowKey="@item.RowKey" class="btn btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-partitionKey="@item.PartitionKey"
                                           asp-route-rowKey="@item.RowKey" class="btn btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-4">
                <i class="fas fa-box fa-3x text-muted mb-3"></i>
                <h4>No Products Found</h4>
                <p class="text-muted">Get started by adding your first product.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add First Product
                </a>
            </div>
        }
    </div>
</div>

<style>
    .product-thumbnail {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 4px;
    }
</style>