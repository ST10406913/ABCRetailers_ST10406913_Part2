@model ABCRetailers.Models.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb" class="mb-4">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-controller="Products" asp-action="Index">Products</a></li>
                    <li class="breadcrumb-item active">Shopping Cart</li>
                </ol>
            </nav>

            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-shopping-cart"></i> Your Shopping Cart</h2>
                <span class="badge bg-primary fs-6">@Model.TotalItems item@(Model.TotalItems != 1 ? "s" : "")</span>
            </div>

            @if (!Model.Items.Any())
            {
                <div class="card text-center py-5">
                    <div class="card-body">
                        <div class="text-muted mb-4">
                            <i class="fas fa-shopping-cart" style="font-size: 4rem;"></i>
                        </div>
                        <h3 class="text-muted">Your cart is empty</h3>
                        <p class="text-muted mb-4">Start shopping to add items to your cart.</p>
                        <a href="@Url.Action("Index", "Products")" class="btn btn-primary btn-lg">
                            <i class="fas fa-shopping-bag"></i> Continue Shopping
                        </a>
                    </div>
                </div>
            }
            else
            {
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-center">Price</th>
                                        <th class="text-center">Quantity</th>
                                        <th class="text-center">Total</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Items)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                                    {
                                                        <img src="@item.ImageUrl" alt="@item.ProductName"
                                                             class="img-thumbnail me-3"
                                                             style="width: 80px; height: 80px; object-fit: cover;">
                                                    }
                                                    else
                                                    {
                                                        <div class="bg-light d-flex align-items-center justify-content-center me-3"
                                                             style="width: 80px; height: 80px;">
                                                            <i class="fas fa-image text-muted"></i>
                                                        </div>
                                                    }
                                                    <div>
                                                        <h6 class="mb-1">@item.ProductName</h6>
                                                        <small class="text-muted">Product ID: @item.ProductId</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center align-middle">
                                                <strong>R @item.Price.ToString("0.00")</strong>
                                            </td>
                                            <td class="text-center align-middle">
                                                <div class="input-group input-group-sm" style="width: 130px;">
                                                    <button class="btn btn-outline-secondary"
                                                            type="button"
                                                            onclick="updateQuantity('@item.CartRowKey', @item.Quantity - 1)">
                                                        <i class="fas fa-minus"></i>
                                                    </button>
                                                    <input type="number"
                                                           class="form-control text-center"
                                                           value="@item.Quantity"
                                                           min="1"
                                                           id="quantity-@item.CartRowKey"
                                                           onchange="updateQuantity('@item.CartRowKey', this.value)">
                                                    <button class="btn btn-outline-secondary"
                                                            type="button"
                                                            onclick="updateQuantity('@item.CartRowKey', @item.Quantity + 1)">
                                                        <i class="fas fa-plus"></i>
                                                    </button>
                                                </div>
                                            </td>
                                            <td class="text-center align-middle">
                                                <strong class="text-success">R @item.TotalPrice.ToString("0.00")</strong>
                                            </td>
                                            <td class="text-center align-middle">
                                                <button class="btn btn-danger btn-sm"
                                                        onclick="removeItem('@item.CartRowKey')"
                                                        title="Remove from cart">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-light">
                                    <tr>
                                        <td colspan="3" class="text-end"><h5 class="mb-0">Grand Total:</h5></td>
                                        <td class="text-center"><h5 class="mb-0 text-success">R @Model.GrandTotal.ToString("0.00")</h5></td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <a href="@Url.Action("Index", "Products")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Continue Shopping
                            </a>
                            <a href="@Url.Action("Checkout", "Cart")" class="btn btn-primary btn-lg">
                                <i class="fas fa-shopping-bag"></i> Proceed to Checkout
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function updateQuantity(rowKey, newQuantity) {
            if (newQuantity < 1) {
                removeItem(rowKey);
                return;
            }

            $.post('@Url.Action("Update", "Cart")', {
                rowKey: rowKey,
                quantity: newQuantity
            }, function(response) {
                if (response.success) {
                    location.reload();
                } else {
                    alert('Error: ' + response.message);
                }
            }).fail(function() {
                alert('An error occurred while updating the cart.');
            });
        }

        function removeItem(rowKey) {
            if (confirm('Are you sure you want to remove this item from your cart?')) {
                $.post('@Url.Action("Remove", "Cart")', {
                    rowKey: rowKey
                }, function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + response.message);
                    }
                }).fail(function() {
                    alert('An error occurred while removing the item.');
                });
            }
        }

        // Update cart count after page operations
        function updateCartCount() {
            $.get('@Url.Action("Count", "Cart")', function(data) {
                $('#cartCount').text(data.count > 0 ? data.count : '');
            });
        }
    </script>
}