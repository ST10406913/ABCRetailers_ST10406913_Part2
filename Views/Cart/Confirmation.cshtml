@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card border-success shadow">
                <div class="card-body py-5">
                    <div class="text-success mb-4">
                        <i class="fas fa-check-circle" style="font-size: 5rem;"></i>
                    </div>

                    <h1 class="text-success mb-3">Order Confirmed!</h1>
                    <p class="lead mb-4">Thank you for your order. Your order has been received and is being processed.</p>

                    <div class="alert alert-info mb-4">
                        <h5><i class="fas fa-envelope"></i> What's Next?</h5>
                        <p class="mb-0">
                            You will receive an email confirmation shortly with your order details.
                            You can track your order status from your account dashboard.
                        </p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <i class="fas fa-shipping-fast fa-2x text-primary mb-3"></i>
                                    <h6>Order Processing</h6>
                                    <small class="text-muted">Your order will be processed within 24 hours</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-body">
                                    <i class="fas fa-envelope-open-text fa-2x text-primary mb-3"></i>
                                    <h6>Email Confirmation</h6>
                                    <small class="text-muted">Check your email for order details</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-center">
                        <a href="@Url.Action("Index", "Products")" class="btn btn-primary btn-lg me-md-2">
                            <i class="fas fa-shopping-bag"></i> Continue Shopping
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-home"></i> Back to Home
                        </a>
                    </div>

                    <hr class="my-4">

                    <div class="text-muted small">
                        <p class="mb-1">Need help with your order?</p>
                        <p class="mb-0">
                            Contact our support team at
                            <a href="mailto:support@abcretailers.com">support@abcretailers.com</a>
                            or call <strong>1-800-ABC-STORE</strong>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>